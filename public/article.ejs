<html>

<head>
  <%- include('_head') %>
  <title>
    <%= title %> - <%= site_title %>
  </title>
</head>

<body>
  <div id="container">
    <h4>
      <%= title %>
    </h4>
    <p class="author">From: TG user_id: <%= article_user_id %>, user_name: <%= article_user_name %></p>
    <hr>
    <span>
      <%- story %>
    </span>
    <hr>
    <% if (user_id === article_user_id) { %>
      <a href="/edit/<%= article_id %>" class="waves-effect waves-light btn">この記事を編集する</a><br><br>
      <a href="/list" class="waves-effect waves-light btn">自分の記事一覧</a>
    <% } %>
  </div>
</body>

</html>